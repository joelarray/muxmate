{% set playbackId = playbackId ?? null %}

{% if playbackId %}

    {% js playerUrl %}

    {% apply attr({
        'stream-type': 'on-demand',
        'playback-id': playbackId,
        'playback-token': playbackToken ?? false,
        'thumbnail-token': thumbnailToken ?? false,
        'storyboard-token': storyboardToken ?? false,
        'style': 'width:100%;height:100%;',
        autoplay: 'true'
    }) %}
        <mux-player></mux-player>
    {% endapply %}

{% else %}

    <div style="position:absolute;left:0;top:0;width:100%;height:100%;display:flex;justify-content:center;align-items:center;">
        <p class="warning with-icon">No Mux playback ID</p>
    </div>

{% endif %}
